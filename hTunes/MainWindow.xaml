<Window x:Class="hTunes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="115"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <DataGrid x:Name="dataGrid" HorizontalAlignment="Left" Margin="2,10,0,0" VerticalAlignment="Top" Height="254" Width="390" AutoGenerateColumns="False" Grid.Column="1" Grid.Row="1">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding id}" Visibility="Hidden"/>
                <DataGridTextColumn Binding="{Binding title}" Header="Title"/>
                <DataGridTextColumn Binding="{Binding artist}" Header="Artist"/>
                <DataGridTextColumn Binding="{Binding album}" Header="Album"/>
                <DataGridTextColumn Binding="{Binding genre}" Header="Genre"/>
            </DataGrid.Columns>
        </DataGrid>
        <ListBox HorizontalAlignment="Right" Height="254" Margin="0,10,3,0" VerticalAlignment="Top" Width="102" Grid.Column="0" Grid.Row="1"/>
        <Button Content="Play" HorizontalAlignment="Center" Margin="100,0,0,0" VerticalAlignment="Top" Width="75" Grid.Column="1" Grid.Row="2"/>
        <Button Content="Stop" HorizontalAlignment="Center" Margin="0,0,100,0" VerticalAlignment="Top" Width="75" Grid.Column="1" Grid.Row="2"/>
        <ToolBar HorizontalAlignment="Left" VerticalAlignment="Top" Height="25" Width="517" Grid.ColumnSpan="2" >
            <Button Content="Open" />

            <Button Content="New Playlist" />
            <Separator></Separator>
            <Button Content="About" />
        </ToolBar>



    </Grid>
</Window>
