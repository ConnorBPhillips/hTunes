<Window x:Class="hTunes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <DataGrid HorizontalAlignment="Left" Margin="123,44,0,0" VerticalAlignment="Top" Height="217" Width="373">
            <DataGrid.Columns>
                <DataGridCheckBoxColumn Binding="{x:Null}" Width="150" ClipboardContentBinding="{x:Null}" Header="Title"/>
                <DataGridCheckBoxColumn Binding="{x:Null}" Width="100" ClipboardContentBinding="{x:Null}" Header="Artist"/>
                <DataGridCheckBoxColumn Binding="{x:Null}" Width="50" ClipboardContentBinding="{x:Null}" Header="Album"/>
                <DataGridCheckBoxColumn Binding="{x:Null}" Width="50" ClipboardContentBinding="{x:Null}" Header="Genre"/>
            </DataGrid.Columns>
        </DataGrid>
        <ListBox HorizontalAlignment="Left" Height="254" Margin="10,44,0,0" VerticalAlignment="Top" Width="100"/>
        <Button Content="Play" HorizontalAlignment="Left" Margin="164,278,0,0" VerticalAlignment="Top" Width="75"/>
        <Button Content="Stop" HorizontalAlignment="Left" Margin="305,278,0,0" VerticalAlignment="Top" Width="75"/>
        <ToolBar HorizontalAlignment="Left" VerticalAlignment="Top" Height="25" Width="517">
            <Button Content="Open" />
            <Button Content="New Playlist" />
            <Button Content="About" />
        </ToolBar>
             
            
        
    </Grid>
</Window>
